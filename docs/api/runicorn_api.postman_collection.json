{
  "info": {
    "name": "Runicorn API",
    "description": "Complete API collection for Runicorn experiment tracking platform",
    "version": "0.5.4",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:23300/api",
      "type": "string"
    },
    {
      "key": "run_id",
      "value": "20250114_153045_a1b2c3",
      "type": "string"
    },
    {
      "key": "artifact_name",
      "value": "resnet50-model",
      "type": "string"
    },
    {
      "key": "connection_id",
      "value": "mluser@gpu-server.com:22",
      "type": "string"
    },
    {
      "key": "conda_env",
      "value": "system",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "session_123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health & System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "Get Config",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/config"
          }
        },
        {
          "name": "GPU Telemetry",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/gpu/telemetry"
          }
        }
      ]
    },
    {
      "name": "Runs API",
      "item": [
        {
          "name": "List Runs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/runs"
          }
        },
        {
          "name": "Get Run Detail",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/runs/{{run_id}}"
          }
        },
        {
          "name": "Soft Delete Runs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"run_ids\": [\"{{run_id}}\"]\n}"
            },
            "url": "{{baseUrl}}/runs/soft-delete"
          }
        },
        {
          "name": "List Recycle Bin",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/recycle-bin"
          }
        },
        {
          "name": "Restore Runs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"run_ids\": [\"{{run_id}}\"]\n}"
            },
            "url": "{{baseUrl}}/recycle-bin/restore"
          }
        }
      ]
    },
    {
      "name": "Metrics API",
      "item": [
        {
          "name": "Get Metrics (Time)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/runs/{{run_id}}/metrics"
          }
        },
        {
          "name": "Get Metrics (Step)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/runs/{{run_id}}/metrics_step"
          }
        }
      ]
    },
    {
      "name": "Artifacts API",
      "item": [
        {
          "name": "List All Artifacts",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts"
          }
        },
        {
          "name": "List Models Only",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts?type=model"
          }
        },
        {
          "name": "List Artifact Versions",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts/{{artifact_name}}/versions?type=model"
          }
        },
        {
          "name": "Get Artifact Detail",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts/{{artifact_name}}/v3?type=model"
          }
        },
        {
          "name": "List Artifact Files",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts/{{artifact_name}}/v3/files?type=model"
          }
        },
        {
          "name": "Get Lineage Graph",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts/{{artifact_name}}/v3/lineage?type=model&max_depth=3"
          }
        },
        {
          "name": "Get Storage Stats",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/artifacts/stats"
          }
        },
        {
          "name": "Delete Artifact Version (Soft)",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/artifacts/{{artifact_name}}/v2?type=model&permanent=false"
          }
        }
      ]
    },
    {
      "name": "V2 API (High Performance)",
      "item": [
        {
          "name": "List Experiments (Basic)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/v2/experiments?page=1&per_page=50"
          }
        },
        {
          "name": "List Experiments (Filtered)",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/v2/experiments?project=image_classification&status=finished&best_metric_min=0.9&order_by=best_metric_value&order_desc=true&page=1&per_page=20"
          }
        },
        {
          "name": "Get Experiment Detail",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/v2/experiments/{{run_id}}"
          }
        },
        {
          "name": "Fast Metrics Query",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/v2/experiments/{{run_id}}/metrics/fast?metric_names=loss,accuracy&downsample=100"
          }
        },
        {
          "name": "Batch Delete",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"exp_ids\": [\"{{run_id}}\"],\n  \"reason\": \"cleanup\"\n}"
            },
            "url": "{{baseUrl}}/v2/experiments/batch-delete"
          }
        }
      ]
    },
    {
      "name": "Config API",
      "item": [
        {
          "name": "Get Configuration",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/config"
          }
        },
        {
          "name": "Set User Root Dir",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"path\": \"E:\\\\RunicornData\"\n}"
            },
            "url": "{{baseUrl}}/config/user_root_dir"
          }
        },
        {
          "name": "List SSH Connections",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/config/ssh_connections"
          }
        },
        {
          "name": "Save SSH Connection",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"host\": \"192.168.1.100\",\n  \"port\": 22,\n  \"username\": \"user\",\n  \"name\": \"Lab Server\",\n  \"auth_method\": \"password\",\n  \"remember_password\": true,\n  \"password\": \"secret123\"\n}"
            },
            "url": "{{baseUrl}}/config/ssh_connections"
          }
        }
      ]
    },
    {
      "name": "Remote Viewer API",
      "description": "VSCode Remote-style remote server access (v0.5.4)",
      "item": [
        {
          "name": "Connection Management",
          "item": [
            {
              "name": "Connect to Remote Server",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"host\": \"gpu-server.com\",\n  \"port\": 22,\n  \"username\": \"mluser\",\n  \"password\": null,\n  \"private_key\": null,\n  \"private_key_path\": \"~/.ssh/id_rsa\",\n  \"passphrase\": null,\n  \"use_agent\": true\n}"
                },
                "url": "{{baseUrl}}/remote/connect",
                "description": "Establish SSH connection to remote server"
              }
            },
            {
              "name": "List Sessions",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/sessions",
                "description": "Get list of all active SSH sessions"
              }
            },
            {
              "name": "Disconnect",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"host\": \"gpu-server.com\",\n  \"port\": 22,\n  \"username\": \"mluser\"\n}"
                },
                "url": "{{baseUrl}}/remote/disconnect",
                "description": "Disconnect an SSH session"
              }
            },
            {
              "name": "Remote Status",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/status",
                "description": "Get overall remote status (connections + viewer sessions)"
              }
            }
          ]
        },
        {
          "name": "Host Key Verification",
          "item": [
            {
              "name": "List Known Hosts",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/known-hosts/list",
                "description": "List entries in Runicorn-managed known_hosts"
              }
            },
            {
              "name": "Accept Host Key",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"host\": \"gpu-server.com\",\n  \"port\": 22,\n  \"key_type\": \"ssh-ed25519\",\n  \"public_key\": \"ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAA...\",\n  \"fingerprint_sha256\": \"SHA256:...\"\n}"
                },
                "url": "{{baseUrl}}/remote/known-hosts/accept",
                "description": "Accept and store a host key in Runicorn-managed known_hosts"
              }
            },
            {
              "name": "Remove Known Host",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"host\": \"gpu-server.com\",\n  \"port\": 22,\n  \"key_type\": \"ssh-ed25519\"\n}"
                },
                "url": "{{baseUrl}}/remote/known-hosts/remove",
                "description": "Remove an entry from Runicorn-managed known_hosts"
              }
            }
          ]
        },
        {
          "name": "Environment Detection",
          "item": [
            {
              "name": "List Conda Environments",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/conda-envs?connection_id={{connection_id}}",
                "description": "List Python environments on the remote server"
              }
            }
          ]
        },
        {
          "name": "Remote Config",
          "item": [
            {
              "name": "Get Remote Config",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/config?connection_id={{connection_id}}&conda_env={{conda_env}}",
                "description": "Get Runicorn configuration for a remote environment"
              }
            }
          ]
        },
        {
          "name": "Remote Viewer Management",
          "item": [
            {
              "name": "Start Remote Viewer",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"host\": \"gpu-server.com\",\n  \"port\": 22,\n  \"username\": \"mluser\",\n  \"password\": null,\n  \"private_key\": null,\n  \"private_key_path\": \"~/.ssh/id_rsa\",\n  \"passphrase\": null,\n  \"use_agent\": true,\n  \"remote_root\": \"~/runicorn_data\",\n  \"local_port\": null,\n  \"remote_port\": null,\n  \"conda_env\": \"{{conda_env}}\"\n}"
                },
                "url": "{{baseUrl}}/remote/viewer/start",
                "description": "Start remote viewer session with SSH tunnel"
              }
            },
            {
              "name": "Stop Remote Viewer",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"session_id\": \"{{session_id}}\"\n}"
                },
                "url": "{{baseUrl}}/remote/viewer/stop",
                "description": "Stop a remote viewer session"
              }
            },
            {
              "name": "List Viewer Sessions",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/viewer/sessions",
                "description": "List active remote viewer sessions"
              }
            },
            {
              "name": "Get Viewer Session Status",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/viewer/status/{{session_id}}",
                "description": "Get remote viewer session status by session_id"
              }
            }
          ]
        },
        {
          "name": "Remote File System",
          "item": [
            {
              "name": "List Remote Directory",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/fs/list?connection_id={{connection_id}}&path=~",
                "description": "List remote directory contents"
              }
            },
            {
              "name": "Check Path Exists",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/fs/exists?connection_id={{connection_id}}&path=~/runicorn_data",
                "description": "Check if a remote path exists"
              }
            }
          ]
        },
        {
          "name": "Saved Connections",
          "item": [
            {
              "name": "Get Saved Connections",
              "request": {
                "method": "GET",
                "url": "{{baseUrl}}/remote/connections/saved",
                "description": "List saved connections from connections.json"
              }
            },
            {
              "name": "Save Connections",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "[\n  {\n    \"name\": \"Lab Server\",\n    \"host\": \"gpu-server.com\",\n    \"port\": 22,\n    \"username\": \"mluser\",\n    \"password\": null,\n    \"private_key\": null,\n    \"private_key_path\": \"~/.ssh/id_rsa\",\n    \"passphrase\": null,\n    \"use_agent\": true\n  }\n]"
                },
                "url": "{{baseUrl}}/remote/connections/saved",
                "description": "Save connections to connections.json"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Projects API",
      "item": [
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/projects"
          }
        },
        {
          "name": "List Experiment Names",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/projects/image_classification/names"
          }
        },
        {
          "name": "List Runs in Experiment",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/projects/image_classification/names/resnet_baseline/runs"
          }
        }
      ]
    }
  ]
}

